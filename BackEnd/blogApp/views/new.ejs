<%- include('partials/header') -%>

<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form class="ui form"action="/blogs" method="POST">
        <div class="field">
            <label>Ttile
                <input type="text" name="blog[title]" placeholder="title" required>
            </label>
        </div>
        
        <div class="field">
            <label>Image url
                <input type="text" name="blog[image]" placeholder="image url" required>
            </label>
        </div>
        

        <div class="field">
            <label>Content        
                <textarea name="blog[body]" required></textarea>
            </label>
        </div>

        <button class="ui violet big basic button">submit</button>
    </form>
</div>

<%- include('partials/footer') -%>
